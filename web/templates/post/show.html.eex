<h2><%= @post.title %></h2>
<div>
  <%= @post.body %>
</div>

<%= if @sess_user_logged do %>
<%= render "comment_form.html", post: @post, changeset: @changeset, sess_user: @sess_user,
                                #action: post_post_path(@conn, :add_comment, @post)
                                action: post_path(@conn, :add_comment, @post) %>
<% end %>

<%= render "comments.html", post: @post %>

<%= link "Back", to: post_path(@conn, :index) %>
